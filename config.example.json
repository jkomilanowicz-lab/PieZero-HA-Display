{
    "home_assistant": {
        "url": "http://YOUR_HA_IP:8123",
        "token": "YOUR_LONG_LIVED_ACCESS_TOKEN"
    },
    "mqtt": {
        "enabled": false,
        "broker": "YOUR_MQTT_BROKER_IP",
        "port": 1883,
        "username": "YOUR_MQTT_USERNAME",
        "password": "YOUR_MQTT_PASSWORD",
        "use_tls": false,
        "verify_ssl": false,
        "client_id": "pi0display",
        "base_topic": "pi0display",
        "discovery_prefix": "homeassistant",
        "publish_interval": 30
    },
    "network": {
        "keepalive_target": "192.168.1.1",
        "keepalive_port": 53,
        "internet_check_host": "8.8.8.8",
        "internet_check_port": 53,
        "keepalive_interval": 30
    },
    "display": {
        "width": 1024,
        "height": 600,
        "fullscreen": true,
        "hide_cursor": true,
        "layout": "horizontal",
        "orientation_comment": "Options: horizontal, horizontal-alt, vertical"
    },
    "cache": {
        "use_ramdisk": true,
        "path_comment": "Uses /run/pi0display/ (RAM) when use_ramdisk is true, reduces SD card writes"
    },
    "entities": {
        "weather": "weather.forecast_home",
        "task_lists": [
            "todo.shopping_list"
        ],
        "calendars": [
            "calendar.personal"
        ],
        "mailbox": "binary_sensor.mailbox_door",
        "mailbox_check": "input_boolean.check_mailbox"
    },
    "refresh_interval": {
        "weather_seconds": 300,
        "tasks_seconds": 60,
        "calendar_seconds": 300,
        "mailbox_seconds": 60
    },
    "theme": {
        "background": "#1a1a2e",
        "tile_time": "#16213e",
        "tile_weather": "#0f3460",
        "tile_indicator": "#1a2e1a",
        "tile_today": "#533483",
        "tile_today_upcoming": "#634993",
        "tile_tasks": "#1e5128",
        "tile_status": "#16213e",
        "accent": "#e94560",
        "accent_date": "#d35400",
        "text_primary": "#eaeaea",
        "text_secondary": "#a0a0a0"
    }
}
